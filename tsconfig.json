{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifiers": true
    }
} 